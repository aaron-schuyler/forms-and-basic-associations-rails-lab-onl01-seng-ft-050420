<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre_name, list: "song_genre" %>
    <datalist id="song_genre">
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>"><%= genre.name %></option>
      <% end %>
    </datalist>
    <%= f.text_area :notes_1 %>
    <%= f.text_area :notes_2 %>
  <%= f.submit %>
<% end %>
